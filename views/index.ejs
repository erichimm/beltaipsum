<% include partials/header %>

<h1>Welcome Beltalowda!</h1>

<form action="/" method="get">
    <div class="form-group row">
        <label for="inputAmount" class="col-sm-2 col-form-label">Paragraphs</label>
        <div class="col-sm-10">
            <input type="number" name="options[paragraphs]" id="inputAmount" class="form-control" value="5" min="0" max="100" required>
        </div>
    </div>
    <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Type</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="options[genType]" id="genType1" value="belta" checked>
              <label class="form-check-label" for="genType1">
                All Belta
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="options[genType]" id="genType2" value="belta-with-filler">
              <label class="form-check-label" for="genType2">
                Belta and Filler
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="form-group row">
        <div class="col-sm-2">Options</div>
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="options[start-with-belta]" id="check1" checked>
            <label class="form-check-label" for="check1">
                Start with Belta
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="options[end-with-sasa]" id="check2">
            <label class="form-check-label" for="check2">
                End with sasa ke
            </label>
          </div>
        </div>
      </div>
    <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </div>
</form>

<% include partials/footer %>
